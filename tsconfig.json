{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2019"],
    "target": "es2019",
    "moduleResolution": "Node",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "types": ["node", "lodash", "jest"],
    "typeRoots": [ "types", "./node_modules/@types" ]
  },
  "exclude": [
    "node_modules"
  ]
}
